<div class="form-style">
  <%= simple_form_for @post do |f|  %>
    <%= f.input :content  %>
    <%= f.input :photo, as: :file %>
    <%= f.input :video, as: :file %>
    <%= f.submit class: 'btn btn-primary btn-rounded'%>
  <%end%>
</div>

<div class="container">
  <% @posts.each do |post| %>
    <%= link_to post_path(post), style:"color: black; text-decoration:none;" do  %>
      <div class='card' style="width: 18rem;">
        <div class='card-body'>
          <%= post.content %>
           <% if post.photo.attached? %>
          <div class="p-5" style="width:300px; height: 192px; background-image: url(<%= cl_image_path post.photo.key %>); background-size: cover; background-repeat: no-repeat;" >
          </div>
        <% end %>
          <%= post.user.username %>
          <%= post.created_at.strftime("%H:%M %d-%m-%Y")%>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
