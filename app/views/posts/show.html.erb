<div class="container">
  <div class="post">

    <div class=" d-flex user-post-info my-4 align-items-center">
      <% if @post.user.avatar.attached? %>
        <%= cl_image_tag @post.user.avatar.key, class: "post-avatar" %>
      <% else %>
        <%= image_tag "https://www.shareicon.net/data/128x128/2016/08/18/809170_user_512x512.png", class: "post-avatar" %>
      <% end %>
      <div class="mx-5 d-flex">
      <div>
        <h1 ><%= link_to @post.user.username, user_path(@post.user), method: :get %></h1>

       <p>Published at <%= time_ago_in_words(@post.created_at) %></p>
      </div>
      <div class="d-flex">
       <div class="mx-2">
      <%= @likes %>
    </div>

  <% if user_signed_in? %>
    <% if @post.liked?(current_user) %>
      <% @like = @post.liked?(current_user) %>
      <%= link_to "Dislike", like_path(@like), method: :delete %>
    <% else %>
      <%= link_to "Like", post_likes_path(@post), method: :post %>
    <% end %>
  <% end %>
  </div>
      </div>
      </div>

        <div>
          <%= link_to 'Return', posts_path, class: "mx-5 btn btn-warning btn-rounded" %>
        </div>
  </div>

  <div class="post-body d-flex ">
    <div>
      <p style="font-size: 30px;"><%= @post.content %></p>

      <% if @post.photo.attached? %>
         <div class="p-5" style="width:300px; height: 192px; background-image: url(<%= cl_image_path @post.photo.key %>); background-size: cover; background-repeat: no-repeat;" >
        </div>
      <% end %>

      <% if @post.video.attached? %>
        <div class= "video p-5" style= "background-size: cover; background-repeat: no-repeat;">
         <%= cl_video_tag @post.video.key, cloudinary_resource_type: 'raw', autoplay: true, loop: true, controls: true %>
        </div>
      <% end %>
    </div>

    <% if policy(@post).destroy? %>
        <%= link_to 'delete',post_path(@post), method: 'delete', data: { confirm: 'delete post?' }, class: "mx-5 btn btn-danger btn-rounded" %>
      <%end%>

  </div>
</div>






  <div class="comment-section container">

  <div class="form-style">
    <%= simple_form_for [@post, @comment] do |f|  %>
      <%= f.input :content, label: "leave a comment"  %>
      <%= f.submit class: 'btn post-btn'%>
    <%end%>
  </div>

    <% @comments.each do |comment|%>
      <div class="card-feed p-4 my-3">
        <div class="d-flex mb-4">
          <% if @post.user.avatar.attached? %>
            <%= cl_image_tag @post.user.avatar.key, class: "comment-avatar" %>
          <% else %>
            <%= image_tag "https://www.shareicon.net/data/128x128/2016/08/18/809170_user_512x512.png", class: "comment-avatar" %>
          <% end %>
          <div>
            <div class="user-comment-name">
              <%= link_to comment.user.username, user_path(comment.user), method: :get %>
            </div>
            <p style="color:rgba(230, 230, 230, 0.7)">Published at <%= time_ago_in_words(comment.created_at) %></p>
          </div>
        </div>
      <%= comment.content %>
      </div>
    <% end %>
  </div>
</div>
