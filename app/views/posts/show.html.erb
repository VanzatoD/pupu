<div class="container">
  <div>
  <h1><%= link_to @post.user.username, user_path(@post.user), method: :get %></h1>

  <p><%="posted at #{@post.created_at.strftime("%H:%M %d-%m-%Y")}" %></p>
  <p style="font-size: 30px;"><%= @post.content %></p>

      <% if @post.photo.attached? %>
            <div class="p-5" style="width:300px; height: 192px; background-image: url(<%= cl_image_path @post.photo.key %>); background-size: cover; background-repeat: no-repeat;" >
            </div>
          <% end %>

      <% if @post.video.attached? %>
        <div class= "video p-5" style= "background-size: cover; background-repeat: no-repeat;">
          <%= cl_video_tag @post.video.key, cloudinary_resource_type: 'raw', autoplay: true, loop: true, controls: true %>
        </div>
      <% end %>
  </div>
  <%= link_to 'Return', posts_path, class: "mx-5 btn btn-warning btn-rounded" %>
  <% if policy(@post).destroy? %>
    <%= link_to 'delete',post_path(@post), method: 'delete', data: { confirm: 'delete post?' }, class: "mx-5 btn btn-danger btn-rounded" %>
  <%end%>


    <div>
      <%= @likes %>
    </div>




  <% if user_signed_in? %>
    <% if @post.liked?(current_user) %>
      <% @like = @post.liked?(current_user) %>
      <%= link_to "Dislike", like_path(@like), method: :delete %>
    <% else %>
      <%= link_to "Like", post_likes_path(@post), method: :post %>
    <% end %>
  <% end %>
  </div>
  <div class="comment-section container">

  <div class="form-style">
    <%= simple_form_for [@post, @comment] do |f|  %>
      <%= f.input :content  %>
      <%= f.submit class: 'btn btn-primary btn-rounded'%>
    <%end%>
  </div>

    <% @comments.each do |comment|%>
      <div class="card">
  <%= link_to comment.user.username, user_path(comment.user), method: :get %>
        <%= comment.created_at.strftime("%H:%M %d-%m-%Y") %>
      <%= comment.content %>
      </div>
    <% end %>
  </div>
</div>
