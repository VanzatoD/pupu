<div>
<h1><%= @post.user.username %></h1>
<p><%="posted at #{@post.created_at.strftime("%H:%M %d-%m-%Y")}" %></p>
<p style="font-size: 30px;"><%= @post.content %></p>

    <% if post.photo.attached? %>
          <div class="p-5" style="width:300px; height: 192px; background-image: url(<%= cl_image_path post.photo.key %>); background-size: cover; background-repeat: no-repeat;" >
          </div>
        <% end %>
</div>
<%= link_to 'Return', posts_path, class: "mx-5 btn btn-warning btn-rounded" %>
<% if policy(@post).destroy? %>
  <%= link_to 'delete',post_path(@post), method: 'delete', data: { confirm: 'delete post?' }, class: "mx-5 btn btn-danger btn-rounded" %>
<%end%>
</div>
